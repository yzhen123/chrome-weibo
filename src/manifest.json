{
	// 必须的字段
	"name": "m-weibo",
	"version": "1.2",
	"manifest_version": 2,
	"permissions": [
	"*://*/*"
	],
	// 建议提供的字段
	"description": "一个提供定时提醒功能的谷歌浏览器插件",
	"icons": {
		"16": "img/icon-weibo.png",
		"32": "img/icon-weibo.png",
		"48": "img/icon-weibo.png"
	},
	"background": {
		"page": "bg.html"
	},
	"browser_action": {
		"default_icon": "img/icon-weibo.png",
		"default_title": "m-weibo",
		"default_popup": "index.html"
	}
}  